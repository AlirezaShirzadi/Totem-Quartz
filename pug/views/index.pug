extends ../layouts/layout

block content
    main
        include ../partials/home-slider
        include ../partials/home-collection
        include ../partials/home-product

block script
    script.
        $('.home-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            items:1,
            rtl: true,
            animateOut: 'fadeOut',
            autoplaySpeed: 400,
        })
        $('.collection-carousel').owlCarousel({
            loop:true,
            margin:24,
            nav:false,
            items:1,
            rtl: true,
            //- animateOut: 'fadeOutLeft',
            autoplaySpeed: 400,
            autoWidth: true,
        })
